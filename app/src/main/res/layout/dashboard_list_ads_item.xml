<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
            android:layout_width="296dp"
            android:layout_height="match_parent"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="8dp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            app:cardCornerRadius="10sp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/menu_icon_ads"
                    android:layout_width="match_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="105dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_1"/>
            <TextView
                    android:id="@+id/dashboard_item_name_ads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="Article Header"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Article Content"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#555"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/berrypaylightgrey"
                    android:id="@+id/view"/>
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="20sp"
                             android:layout_marginStart="16sp"
                             android:background="@color/berrypaywhite"
                             android:src="@drawable/ic_thumb_up"
                             android:foreground="?android:attr/selectableItemBackground"
                             android:id="@+id/btn_like"/>

                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@color/berrypaywhite"
                             android:layout_marginTop="20dp"
                             android:layout_marginStart="16sp"
                             android:layout_toEndOf="@+id/btn_like"
                             android:id="@+id/btn_share"
                             android:foreground="?android:attr/selectableItemBackground"
                             android:src="@drawable/ic_share"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>