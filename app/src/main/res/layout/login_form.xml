<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#FFFF"
        android:fitsSystemWindows="true"
        android:backgroundTint="@color/berrypaylightgrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/berrypaylightgrey"
            android:id="@+id/linearLayout">

        <ImageView
                android:layout_width="47sp"
                android:layout_height="56sp"
                android:src="@drawable/logo"
                android:id="@+id/imageView"
                android:layout_marginTop="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20sp"
                tools:ignore="ContentDescription" app:layout_constraintHorizontal_bias="1.0"/>
        <EditText
                android:hint="@string/login_username_hint"
                android:layout_width="168dp"
                android:layout_height="40sp"
                android:drawablePadding="10sp"
                android:textSize="19sp"
                android:inputType="number"
                android:textColor="#413c3c"
                android:textColorHint="#413c3c"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/field_username"
                tools:ignore="Autofill,TextFields"
                app:layout_constraintStart_toEndOf="@+id/spinner_login"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>
        <EditText
                android:hint="@string/login_password_hint"
                android:layout_width="321dp"
                android:layout_height="40sp"
                android:drawablePadding="10sp"
                android:inputType="textPassword"
                android:textColorHint="#413c3c"
                android:textSize="19sp"
                android:textColor="#413c3c"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/field_password"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/field_username"
                tools:ignore="Autofill,RtlHardcoded,TextFields"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="@string/btn_login"
                android:textColor="#FFFF"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="323dp"
                android:layout_height="40sp"
                android:textSize="12sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/rounded_btn"
                android:id="@+id/button_login"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/field_password"
                app:layout_constraintStart_toStartOf="@+id/field_password"
                app:layout_constraintEnd_toEndOf="@+id/field_password"/>
        <TextView
                android:text="@string/label_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed"
                android:inputType="textMultiLine"
                android:textAlignment="textStart"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:ignore="TextViewEdits"
                app:layout_constraintStart_toStartOf="parent"
        />
        <Spinner
                android:layout_width="137dp"
                android:layout_height="40sp"
                android:id="@+id/spinner_login"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/field_username"/>
        <Button
                android:text="@string/link_buat_akun"
                android:layout_width="183dp"
                android:layout_height="40sp"
                android:id="@+id/button2"
                android:textColor="#ffff"
                android:textSize="12sp"
                android:textAlignment="center"
                android:padding="10sp"
                android:layout_marginStart="20sp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/rounded_btn_already_registered"
                android:layout_marginTop="16sp"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@+id/button_login"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button3"/>
        <Button
                android:text="@string/link_lupa_akun"
                android:layout_width="110dp"
                android:layout_height="40sp"
                android:textColor="#FFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/rounded_btn_already_registered"
                android:id="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button2"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="20sp"
                android:foreground="?android:attr/selectableItemBackground"

                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBaseline_toBaselineOf="@+id/button2"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
