<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.berrypay">

    <application
            android:allowBackup="true"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:supportsRtl="true"
            android:theme="@style/LoginActivityTheme">
        <activity android:name=".activity.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.register.RegisterActivity"
                android:theme="@style/Theme.AppCompat.DayNight"/>
        <activity android:name=".activity.forgot.ForgotAccountActivity"/>
        <activity
                android:name=".activity.navigation.NavigationActivity"
                android:label="@string/title_activity_navigation"
                android:theme="@style/LoginActivityTheme">
        </activity>
        <activity android:name=".activity.notification.NotificationActivity"
                  android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>